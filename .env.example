# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_AUDIENCE=https://your-worker.your-subdomain.workers.dev

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_api_token

# Worker Configuration
WORKER_URL=https://your-worker.your-subdomain.workers.dev
ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend-domain.com

# Frontend Configuration (for .env in frontend/)
VITE_AUTH0_DOMAIN=your-tenant.auth0.com
VITE_AUTH0_CLIENT_ID=your_client_id
VITE_AUTH0_AUDIENCE=https://your-worker.your-subdomain.workers.dev
VITE_WORKER_URL=https://your-worker.your-subdomain.workers.dev
VITE_AUTH0_CALLBACK_URL=http://localhost:5173/callback

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Security
JWT_ISSUER=https://your-tenant.auth0.com/
ALLOWED_DOMAINS=*.example.com,example.org
